{{!-- Login and sign up page --}}
<div class="flex-grow">
    <h1 class="text-center my-5 max-[450px]:text-3xl text-4xl lg:text-5xl font-blox">Login / Sign Up</h1>
    <div class="flex flex-col sm:flex-row max-[640px]:items-center gap-4 justify-center">
        <div class="card border-2 border-secondary mx-4">
            <div class="card-body">
                <h5 class="card-title">Log in</h5>
                <form id="login-form">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address*</label>
                        <input type="email" class="form-control text-black p-1" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control text-black p-1" name="password">
                    </div>
                    <button class="btn bg-secondary hover:bg-accent" type="submit">Log In</button>
                </form>
            </div>
        </div>
        <div class="card border-2 border-secondary mx-4">
            <div class="card-body">
                <h5 class="card-title">Sign up</h5>
                <form id="signup-form">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name*</label>
                        <input type="text" class="form-control text-black p-1" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email*</label>
                        <input type="email" class="form-control text-black p-1" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control text-black p-1" name="password">
                    </div>
                    <button class="btn bg-secondary hover:bg-accent" type="submit">Sign up</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/login-and-signup.js"></script>